<div class="space-y-6">
  <!-- 헤더 -->
  <div class="admin-card p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">관리자 대시보드</h1>
        <p class="text-gray-600 mt-2">서비스 현황을 한눈에 확인하세요</p>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-emerald-400 rounded-full animate-pulse"></div>
        <span class="text-sm text-gray-500">실시간 업데이트</span>
      </div>
    </div>
  </div>

  <!-- 통계 카드 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- 전체 사용자 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">전체 사용자</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_users) %></p>
          <div class="flex items-center gap-2 mt-2">
            <span class="text-xs text-emerald-600 font-medium">+<%= @today_users %></span>
            <span class="text-xs text-gray-500">오늘 가입</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- 전체 자소서 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">전체 자소서</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= number_with_delimiter(@total_cover_letters) %></p>
          <div class="flex items-center gap-2 mt-2">
            <span class="text-xs text-blue-600 font-medium">+<%= @this_week_cover_letters %></span>
            <span class="text-xs text-gray-500">이번주 작성</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-blue-400 to-blue-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- 분석 완료율 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">분석 완료율</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">
            <%= @total_cover_letters > 0 ? ((CoverLetter.where.not(analysis_result: nil).count.to_f / @total_cover_letters * 100).round) : 0 %>%
          </p>
          <div class="flex items-center gap-2 mt-2">
            <span class="text-xs text-purple-600 font-medium">완료</span>
            <span class="text-xs text-gray-500">전체 대비</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-purple-400 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- 활성 사용자 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">활성 사용자</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">
            <%= User.where("created_at > ?", 7.days.ago).count %>
          </p>
          <div class="flex items-center gap-2 mt-2">
            <span class="text-xs text-orange-600 font-medium">최근 7일</span>
            <span class="text-xs text-gray-500">가입자</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-orange-400 to-orange-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- 차트와 최근 활동 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 일별 통계 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">최근 7일 활동</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
          <span class="text-sm text-gray-500">실시간</span>
        </div>
      </div>
      <div class="space-y-4">
        <% @daily_stats.each do |stat| %>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <span class="text-sm font-medium text-gray-700"><%= stat[:date] %></span>
            <div class="flex gap-6">
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
                <span class="text-sm text-gray-600">가입:</span>
                <span class="text-sm font-semibold text-gray-900"><%= stat[:users] %></span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-sm text-gray-600">분석:</span>
                <span class="text-sm font-semibold text-gray-900"><%= stat[:analyses] %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 분석 상태 분포 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">분석 진행 상태</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
          <span class="text-sm text-gray-500">분포</span>
        </div>
      </div>
      <div class="space-y-5">
        <% @analysis_distribution.each do |type, count| %>
          <div>
            <div class="flex justify-between mb-3">
              <span class="text-sm font-medium text-gray-700"><%= type %></span>
              <span class="text-sm font-semibold text-gray-900"><%= count %>건</span>
            </div>
            <div class="w-full bg-gray-100 rounded-full h-3 overflow-hidden">
              <div class="bg-gradient-to-r from-purple-400 to-purple-500 h-3 rounded-full transition-all duration-500 ease-out" 
                   style="width: <%= @total_cover_letters > 0 ? (count.to_f / @total_cover_letters * 100).round : 0 %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 최근 활동 테이블 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 최근 가입 사용자 -->
    <div class="admin-card">
      <div class="px-6 py-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">최근 가입 사용자</h3>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-500">신규</span>
          </div>
        </div>
      </div>
      <div class="divide-y divide-gray-100">
        <% @recent_users.each do |user| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-full flex items-center justify-center">
                  <span class="text-sm font-bold text-white"><%= user.email.first.upcase %></span>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= user.email %></p>
                  <p class="text-xs text-gray-500 mt-1"><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></p>
                </div>
              </div>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                신규
              </span>
            </div>
          </div>
        <% end %>
        <% if @recent_users.empty? %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <p class="text-sm text-gray-500">최근 가입한 사용자가 없습니다</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 최근 자소서 -->
    <div class="admin-card">
      <div class="px-6 py-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">최근 자소서 분석</h3>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-500">분석</span>
          </div>
        </div>
      </div>
      <div class="divide-y divide-gray-100">
        <% @recent_cover_letters.each do |letter| %>
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3 flex-1 min-w-0">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-sm font-bold text-white">A</span>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= letter.company_name || "미지정" %> - <%= letter.position || "미지정" %>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= letter.user&.email || "비회원" %> • <%= letter.created_at.strftime("%m/%d %H:%M") %>
                  </p>
                </div>
              </div>
              <% if letter.analysis_result.present? %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  완료
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  대기
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if @recent_cover_letters.empty? %>
          <div class="px-6 py-12 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <p class="text-sm text-gray-500">최근 작성된 자소서가 없습니다</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>