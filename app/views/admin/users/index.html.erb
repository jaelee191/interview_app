<div class="space-y-6">
  <!-- 헤더 -->
  <div class="admin-card p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">사용자 관리</h1>
        <p class="text-gray-600 mt-2">전체 사용자 목록과 정보를 관리합니다</p>
      </div>
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-emerald-400 rounded-full"></div>
          <span class="text-sm text-gray-500">총 <%= @users.count %>명</span>
        </div>
      </div>
    </div>
  </div>

  <!-- 테이블 -->
  <div class="admin-card overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">사용자 목록</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
          <span class="text-sm text-gray-500">실시간</span>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">사용자</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">가입일</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">자소서</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">권한</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">관리</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-white"><%= user.email.first.upcase %></span>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= user.email %></p>
                    <p class="text-xs text-gray-500">ID: <%= user.id %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= user.created_at.strftime("%Y-%m-%d") %></div>
                <div class="text-xs text-gray-500"><%= user.created_at.strftime("%H:%M") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-500 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-bold text-white"><%= user.cover_letters.count %></span>
                  </div>
                  <span class="text-sm text-gray-900"><%= user.cover_letters.count %>건</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if user.admin? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-red-100 to-red-200 text-red-800">
                    <div class="w-2 h-2 bg-red-400 rounded-full mr-2"></div>
                    관리자
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800">
                    <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
                    일반
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to admin_user_path(user), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-gradient-to-r from-emerald-400 to-emerald-500 rounded-lg hover:from-emerald-500 hover:to-emerald-600 transition-all duration-200 shadow-sm" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  상세보기
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @users.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <p class="text-sm text-gray-500">등록된 사용자가 없습니다</p>
      </div>
    <% end %>
  </div>
</div>