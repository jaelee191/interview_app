<div class="space-y-6">
  <!-- 헤더 -->
  <div class="admin-card p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">통계 분석</h1>
        <p class="text-gray-600 mt-2">서비스 사용 통계와 트렌드를 분석합니다</p>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-purple-400 rounded-full animate-pulse"></div>
        <span class="text-sm text-gray-500">실시간 데이터</span>
      </div>
    </div>
  </div>

  <!-- 기간 선택 -->
  <div class="admin-card p-6">
    <div class="flex items-center gap-4">
      <span class="text-sm font-medium text-gray-700">분석 기간:</span>
      <div class="flex gap-2">
        <%= link_to admin_analytics_path(period: "day"), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:period] == 'day' ? 'bg-gradient-to-r from-purple-400 to-purple-500 text-white shadow-lg' : 'bg-white text-gray-700 border border-gray-200 hover:border-purple-300 hover:shadow-sm'}" do %>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            일간
          </div>
        <% end %>
        <%= link_to admin_analytics_path(period: "week"), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:period] == 'week' || params[:period].nil? ? 'bg-gradient-to-r from-purple-400 to-purple-500 text-white shadow-lg' : 'bg-white text-gray-700 border border-gray-200 hover:border-purple-300 hover:shadow-sm'}" do %>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            주간
          </div>
        <% end %>
        <%= link_to admin_analytics_path(period: "month"), 
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:period] == 'month' ? 'bg-gradient-to-r from-purple-400 to-purple-500 text-white shadow-lg' : 'bg-white text-gray-700 border border-gray-200 hover:border-purple-300 hover:shadow-sm'}" do %>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            월간
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 통계 카드 -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">신규 가입</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @new_users %></p>
          <div class="flex items-center gap-2 mt-2">
            <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
            <span class="text-xs text-gray-500">이번 기간</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">활성 사용자</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @active_users %></p>
          <div class="flex items-center gap-2 mt-2">
            <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
            <span class="text-xs text-gray-500">활성 상태</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-blue-400 to-blue-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="admin-card p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">총 분석</p>
          <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_analyses %></p>
          <div class="flex items-center gap-2 mt-2">
            <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
            <span class="text-xs text-gray-500">완료된 분석</span>
          </div>
        </div>
        <div class="w-14 h-14 bg-gradient-to-br from-purple-400 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- 차트 섹션 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 일별 차트 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">일별 추이</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
          <span class="text-sm text-gray-500">트렌드</span>
        </div>
      </div>
      <div class="space-y-4">
        <% @daily_data.each do |data| %>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <span class="text-sm font-medium text-gray-700"><%= data[:date] %></span>
            <div class="flex gap-6">
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
                <span class="text-sm text-gray-600">가입:</span>
                <span class="text-sm font-semibold text-gray-900"><%= data[:users] %></span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-sm text-gray-600">분석:</span>
                <span class="text-sm font-semibold text-gray-900"><%= data[:analyses] %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 인기 기업 -->
    <div class="admin-card p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">인기 분석 기업</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
          <span class="text-sm text-gray-500">인기</span>
        </div>
      </div>
      <div class="space-y-4">
        <% @popular_analyses.each do |company, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-gradient-to-br from-orange-400 to-orange-500 rounded-lg flex items-center justify-center">
                <span class="text-xs font-bold text-white"><%= company.first.upcase %></span>
              </div>
              <span class="text-sm font-medium text-gray-700"><%= company %></span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-sm font-semibold text-gray-900"><%= count %>건</span>
              <div class="w-16 h-2 bg-gray-100 rounded-full overflow-hidden">
                <div class="bg-gradient-to-r from-orange-400 to-orange-500 h-2 rounded-full transition-all duration-500 ease-out" 
                     style="width: <%= @popular_max > 0 ? (count.to_f / @popular_max * 100).round : 0 %>%"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>