<div class="space-y-6">
  <!-- 헤더 -->
  <div class="admin-card p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">자소서 관리</h1>
        <p class="text-gray-600 mt-2">전체 자소서 목록과 분석 상태를 확인합니다</p>
      </div>
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-blue-400 rounded-full"></div>
          <span class="text-sm text-gray-500">총 <%= @cover_letters.count %>건</span>
        </div>
      </div>
    </div>
  </div>

  <!-- 테이블 -->
  <div class="admin-card overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">자소서 목록</h3>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
          <span class="text-sm text-gray-500">실시간</span>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ID</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">사용자</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">회사/직무</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">작성일</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">상태</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">관리</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">
          <% @cover_letters.each do |letter| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 bg-gradient-to-br from-gray-400 to-gray-500 rounded-lg flex items-center justify-center">
                    <span class="text-xs font-bold text-white">#<%= letter.id %></span>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-emerald-500 rounded-full flex items-center justify-center">
                    <span class="text-xs font-bold text-white"><%= (letter.user&.email || "비회원").first.upcase %></span>
                  </div>
                  <span class="text-sm text-gray-900"><%= letter.user&.email || "비회원" %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= letter.company_name || "미지정" %></div>
                <div class="text-xs text-gray-500"><%= letter.position || "미지정" %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= letter.created_at.strftime("%Y-%m-%d") %></div>
                <div class="text-xs text-gray-500"><%= letter.created_at.strftime("%H:%M") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if letter.improved_letter.present? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-emerald-100 to-emerald-200 text-emerald-800">
                    <div class="w-2 h-2 bg-emerald-400 rounded-full mr-2"></div>
                    리라이트 완료
                  </span>
                <% elsif letter.analysis_result.present? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-blue-100 to-blue-200 text-blue-800">
                    <div class="w-2 h-2 bg-blue-400 rounded-full mr-2"></div>
                    분석 완료
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-gray-100 to-gray-200 text-gray-800">
                    <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
                    대기
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center gap-2">
                  <%= link_to admin_cover_letter_path(letter), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-400 to-blue-500 rounded-lg hover:from-blue-500 hover:to-blue-600 transition-all duration-200 shadow-sm" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    상세보기
                  <% end %>
                  <%= button_to "삭제", admin_cover_letter_path(letter), method: :delete, form: { class: "inline-block" }, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-red-500 hover:bg-red-600 rounded-lg transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @cover_letters.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <p class="text-sm text-gray-500">등록된 자소서가 없습니다</p>
      </div>
    <% end %>
  </div>
</div>