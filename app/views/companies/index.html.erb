<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Page Header -->
  <div class="border-b border-gray-100 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">기업 검색</h1>
          <p class="text-gray-600 mt-2">실시간 뉴스 모니터링을 위한 기업을 검색하고 추가하세요</p>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-500">총 <%= @companies.count %>개 기업</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Search Section -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 mb-8">
      <%= form_with url: search_companies_path, method: :get, local: true do |f| %>
        <div class="flex gap-4">
          <div class="flex-1 relative">
            <%= text_field_tag :q, params[:q], 
                placeholder: "기업명을 입력하세요 (예: 삼성전자, 네이버)", 
                class: "w-full px-6 py-4 pr-12 border border-gray-200 rounded-xl focus:border-black focus:outline-none focus:ring-1 focus:ring-black transition-all text-lg",
                autocomplete: "off" %>
            <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <%= submit_tag "검색", 
              class: "px-8 py-4 bg-black text-white rounded-xl hover:bg-gray-800 transition-all font-medium cursor-pointer" %>
        </div>
      <% end %>
      
      <!-- Quick Search Tags -->
      <div class="mt-6">
        <p class="text-sm font-medium text-gray-700 mb-3">인기 검색어</p>
        <div class="flex flex-wrap gap-2">
          <% ["삼성전자", "SK하이닉스", "네이버", "카카오", "현대자동차", "LG에너지솔루션", "셀트리온", "삼성바이오로직스"].each do |company_name| %>
            <%= link_to search_companies_path(q: company_name), 
                class: "inline-flex items-center px-4 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-black hover:text-white transition-all text-sm font-medium" do %>
              <%= company_name %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Companies Grid -->
    <% if @companies.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @companies.each do |company| %>
          <div class="group bg-white rounded-xl border border-gray-100 p-6 hover:border-gray-200 hover:shadow-lg transition-all">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 group-hover:text-black transition-colors">
                  <%= link_to company.name, company_path(company) %>
                </h3>
                <% if company.ticker.present? %>
                  <span class="inline-block mt-1 px-2 py-1 bg-gray-100 rounded text-xs font-medium text-gray-600">
                    <%= company.ticker %>
                  </span>
                <% end %>
              </div>
              <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-black transition-colors">
                <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
            </div>
            
            <div class="space-y-2 mb-4">
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span><%= company.company_news.count %> 뉴스 기사</span>
              </div>
              <% if company.company_news.any? %>
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>최근 업데이트: <%= time_ago_in_words(company.company_news.last.created_at) %> 전</span>
                </div>
              <% end %>
            </div>
            
            <%= link_to company_path(company), 
                class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-black transition-colors" do %>
              상세 보기
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-2xl border border-gray-100 p-16 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">등록된 기업이 없습니다</h3>
        <p class="text-gray-600 mb-6">위 검색창에서 기업을 검색하여 추가해주세요</p>
        <%= link_to search_companies_path(q: "삼성전자"), 
            class: "inline-flex items-center px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-800 transition-all font-medium" do %>
          삼성전자 검색하기
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>