<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Page Header -->
  <div class="border-b border-gray-100 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">뉴스 기사</h1>
          <p class="text-gray-600 mt-2">수집된 모든 기업 뉴스를 한눈에 확인하세요</p>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-500">총 <%= @articles&.count || 0 %>개 기사</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Filter Section -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
      <div class="flex flex-wrap gap-4 items-center justify-between">
        <div class="flex flex-wrap gap-2">
          <button class="px-4 py-2 bg-black text-white rounded-lg text-sm font-medium">전체</button>
          <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">오늘</button>
          <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">이번 주</button>
          <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">이번 달</button>
        </div>
        <div class="flex items-center space-x-2">
          <select class="px-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-black">
            <option>최신순</option>
            <option>인기순</option>
            <option>댓글순</option>
          </select>
        </div>
      </div>
    </div>
    
    <!-- Articles List -->
    <% if @articles&.any? %>
      <div class="space-y-6">
        <% @articles.each do |article| %>
          <article class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-lg transition-all">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                  <span class="px-2 py-1 bg-gray-100 rounded text-xs font-medium text-gray-600">
                    <%= article.source || "뉴스" %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(article.created_at) %> 전
                  </span>
                </div>
                <h2 class="text-xl font-semibold text-gray-900 mb-2 hover:text-black transition-colors">
                  <%= link_to article.title, article_path(article) %>
                </h2>
                <p class="text-gray-600 line-clamp-2 mb-4">
                  <%= truncate(article.content, length: 200) %>
                </p>
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                      <%= rand(100..1000) %> 조회
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                      </svg>
                      <%= rand(0..50) %> 댓글
                    </span>
                  </div>
                  <%= link_to article_path(article), class: "text-sm font-medium text-gray-700 hover:text-black transition-colors inline-flex items-center" do %>
                    자세히 보기
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </article>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <nav class="flex space-x-2">
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-500 hover:bg-gray-50">이전</button>
          <button class="px-4 py-2 bg-black text-white rounded-lg">1</button>
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">2</button>
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">3</button>
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">다음</button>
        </nav>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-2xl border border-gray-100 p-16 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">아직 수집된 뉴스가 없습니다</h3>
        <p class="text-gray-600 mb-6">기업을 검색하여 뉴스 크롤링을 시작하세요</p>
        <%= link_to companies_path, class: "inline-flex items-center px-6 py-3 bg-black text-white rounded-xl hover:bg-gray-800 transition-all font-medium" do %>
          기업 검색하기
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>