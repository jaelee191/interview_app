<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- 페이지 헤더 -->
  <div class="bg-white rounded-lg border border-gray-100 p-8 mb-8">
    <div class="mb-6">
      <div class="flex items-center gap-3 mb-2">
        <%= link_to "마이페이지", mypage_path, class: "text-gray-500 hover:text-gray-700" %>
        <span class="text-gray-400">/</span>
        <span class="text-gray-900 font-medium">내 프로필</span>
      </div>
      <div class="flex items-start justify-between">
        <div>
          <h1 class="text-3xl font-semibold text-gray-900">
            <%= @user_profile.name || "이름을 입력해주세요" %>
          </h1>
          <p class="text-gray-600 mt-2">자소서 작성에 필요한 기본 정보를 관리합니다</p>
        </div>
        <%= link_to "프로필 수정", edit_user_profile_path(@user_profile), 
            class: "px-4 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- 기본 정보 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">기본 정보</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">이름</label>
          <p class="text-gray-900"><%= @user_profile.name || "-" %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">이메일</label>
          <p class="text-gray-900"><%= current_user.email %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">희망 직무</label>
          <p class="text-gray-900"><%= @user_profile.desired_position || "-" %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">최종학력</label>
          <p class="text-gray-900"><%= @user_profile.education || "-" %></p>
        </div>
      </div>
    </div>

    <!-- 경력 사항 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">경력 사항</h2>
        <%= link_to "+ 추가", edit_user_profile_path(@user_profile), 
            class: "text-sm text-emerald-600 hover:text-emerald-700" %>
      </div>
      
      <% if @career_history.any? %>
        <div class="space-y-3">
          <% @career_history.each do |career| %>
            <div class="pb-3 border-b border-gray-100 last:border-0">
              <h3 class="font-medium text-gray-900"><%= career['company'] %></h3>
              <p class="text-sm text-gray-600"><%= career['position'] %></p>
              <p class="text-xs text-gray-500 mt-1"><%= career['duration'] %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 text-center py-8">경력사항을 추가해주세요</p>
      <% end %>
    </div>
  </div>

  <!-- 핵심 역량 -->
  <div class="bg-white rounded-lg border border-gray-100 p-6 mt-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900">보유 기술</h2>
      <%= link_to "수정", edit_user_profile_path(@user_profile), 
          class: "text-sm text-emerald-600 hover:text-emerald-700" %>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-600 mb-2">프로그래밍 언어</label>
        <% if @user_profile.programming_languages.present? %>
          <div class="flex flex-wrap gap-2">
            <% @user_profile.programming_languages.split(',').each do |lang| %>
              <span class="inline-block px-3 py-1 bg-emerald-50 text-emerald-700 rounded-full text-sm">
                <%= lang.strip %>
              </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">프로그래밍 언어를 추가해주세요</p>
        <% end %>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-600 mb-2">프레임워크</label>
        <% if @user_profile.frameworks.present? %>
          <div class="flex flex-wrap gap-2">
            <% @user_profile.frameworks.split(',').each do |framework| %>
              <span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                <%= framework.strip %>
              </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">프레임워크를 추가해주세요</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 자기소개 -->
  <div class="bg-white rounded-lg border border-gray-100 p-6 mt-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-semibold text-gray-900">자기소개</h2>
      <%= link_to "수정", edit_user_profile_path(@user_profile), 
          class: "text-sm text-emerald-600 hover:text-emerald-700" %>
    </div>
    
    <% if @user_profile.introduction.present? %>
      <p class="text-gray-700 leading-relaxed"><%= @user_profile.introduction %></p>
    <% else %>
      <p class="text-sm text-gray-500 text-center py-8">
        간단한 자기소개를 작성해주세요.<br>
        이 내용은 자소서 작성 시 AI가 참고합니다.
      </p>
    <% end %>
  </div>

  <!-- 빠른 작업 -->
  <div class="bg-gray-50 rounded-lg p-6 mt-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">자소서 작성 시작하기</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <%= link_to job_posting_cover_letters_path, 
          class: "text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow" do %>
        <div class="text-2xl mb-2">📋</div>
        <div class="text-sm font-medium text-gray-700">채용공고 분석</div>
      <% end %>
      
      <%= link_to company_analysis_cover_letters_path, 
          class: "text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow" do %>
        <div class="text-2xl mb-2">🏢</div>
        <div class="text-sm font-medium text-gray-700">기업 분석</div>
      <% end %>
      
      <%= link_to interactive_cover_letters_path, 
          class: "text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow" do %>
        <div class="text-2xl mb-2">✍️</div>
        <div class="text-sm font-medium text-gray-700">AI 자소서 작성</div>
      <% end %>
      
      <%= link_to advanced_cover_letters_path, 
          class: "text-center p-4 bg-white rounded-lg hover:shadow-md transition-shadow" do %>
        <div class="text-2xl mb-2">🔍</div>
        <div class="text-sm font-medium text-gray-700">심층 분석</div>
      <% end %>
    </div>
  </div>
</div>