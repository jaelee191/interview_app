<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Profile Header -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <div class="flex items-start justify-between">
        <div class="flex items-center space-x-6">
          <!-- Profile Avatar -->
          <div class="w-24 h-24 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full flex items-center justify-center">
            <span class="text-white text-3xl font-bold">
              <%= @user_profile.name.present? ? @user_profile.name[0].upcase : current_user.email[0].upcase %>
            </span>
          </div>
          
          <!-- Profile Info -->
          <div>
            <h1 class="text-3xl font-bold text-gray-900">
              <%= @user_profile.name || "프로필을 완성해주세요" %>
            </h1>
            <p class="text-gray-600 mt-1"><%= current_user.email %></p>
            <div class="flex items-center gap-4 mt-3">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                </svg>
                <%= @user_profile.education || "학력 미입력" %>
              </span>
              <span class="text-sm text-gray-500">
                가입일: <%= current_user.created_at.strftime("%Y년 %m월 %d일") %>
              </span>
            </div>
          </div>
        </div>
        
        <!-- Edit Button -->
        <%= link_to edit_user_profile_path(@user_profile), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          프로필 수정
        <% end %>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">작성한 자소서</p>
            <p class="text-2xl font-bold text-gray-900"><%= @recent_analyses.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">경력 사항</p>
            <p class="text-2xl font-bold text-gray-900"><%= @career_history.size %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">프로젝트</p>
            <p class="text-2xl font-bold text-gray-900"><%= @projects.size %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 p-3 bg-orange-100 rounded-lg">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">온톨로지 분석</p>
            <p class="text-2xl font-bold text-gray-900"><%= @ontology_analyses.count %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column: Career & Projects -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Career History -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">경력 사항</h2>
            <%= link_to edit_user_profile_path(@user_profile), class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
              + 경력 추가
            <% end %>
          </div>
          
          <% if @career_history.any? %>
            <div class="space-y-4">
              <% @career_history.each do |career| %>
                <div class="border-l-4 border-blue-500 pl-4 py-2">
                  <div class="flex items-start justify-between">
                    <div>
                      <h3 class="font-semibold text-gray-900"><%= career['company'] %></h3>
                      <p class="text-gray-600"><%= career['position'] %></p>
                      <p class="text-sm text-gray-500 mt-1"><%= career['duration'] %></p>
                      <% if career['achievements'].present? %>
                        <p class="text-sm text-gray-700 mt-2"><%= career['achievements'] %></p>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <p class="mt-2 text-sm text-gray-500">아직 등록된 경력이 없습니다</p>
              <%= link_to "경력 추가하기", edit_user_profile_path(@user_profile), class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          <% end %>
        </div>

        <!-- Projects -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">프로젝트</h2>
            <%= link_to edit_user_profile_path(@user_profile), class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
              + 프로젝트 추가
            <% end %>
          </div>
          
          <% if @projects.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @projects.each do |project| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
                  <h3 class="font-semibold text-gray-900"><%= project['name'] %></h3>
                  <p class="text-sm text-gray-600 mt-1"><%= project['role'] %> • <%= project['duration'] %></p>
                  <% if project['description'].present? %>
                    <p class="text-sm text-gray-700 mt-2"><%= project['description'] %></p>
                  <% end %>
                  <% if project['tech_stack'].present? %>
                    <div class="mt-2 flex flex-wrap gap-1">
                      <% project['tech_stack'].split(',').each do |tech| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= tech.strip %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              <p class="mt-2 text-sm text-gray-500">아직 등록된 프로젝트가 없습니다</p>
              <%= link_to "프로젝트 추가하기", edit_user_profile_path(@user_profile), class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Skills & Recent Activities -->
      <div class="space-y-8">
        <!-- Technical Skills -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">기술 스택</h2>
          <% if @technical_skills.is_a?(Array) && @technical_skills.any? %>
            <div class="flex flex-wrap gap-2">
              <% @technical_skills.each do |skill| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <%= skill %>
                </span>
              <% end %>
            </div>
          <% elsif @technical_skills.is_a?(String) && @technical_skills.present? %>
            <div class="flex flex-wrap gap-2">
              <% @technical_skills.split(',').each do |skill| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <%= skill.strip %>
                </span>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">기술 스택을 추가해주세요</p>
          <% end %>
        </div>

        <!-- Recent Analyses -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">최근 자소서 분석</h2>
          <% if @recent_analyses.any? %>
            <div class="space-y-3">
              <% @recent_analyses.each do |analysis| %>
                <%= link_to cover_letter_path(analysis), class: "block p-3 rounded-lg hover:bg-gray-50 transition" do %>
                  <div class="flex items-start justify-between">
                    <div>
                      <p class="font-medium text-gray-900"><%= analysis.company_name || "제목 없음" %></p>
                      <p class="text-sm text-gray-600"><%= analysis.position || "직무 미지정" %></p>
                      <p class="text-xs text-gray-500 mt-1"><%= analysis.created_at.strftime("%Y.%m.%d") %></p>
                    </div>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">아직 분석한 자소서가 없습니다</p>
          <% end %>
        </div>

        <!-- Quick Actions -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl shadow-lg p-6 text-white">
          <h2 class="text-xl font-bold mb-4">빠른 시작</h2>
          <div class="space-y-3">
            <%= link_to job_posting_cover_letters_path, class: "flex items-center justify-between p-3 bg-white bg-opacity-20 rounded-lg hover:bg-opacity-30 transition" do %>
              <span class="font-medium">채용공고 분석하기</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
            <%= link_to interactive_cover_letters_path, class: "flex items-center justify-between p-3 bg-white bg-opacity-20 rounded-lg hover:bg-opacity-30 transition" do %>
              <span class="font-medium">AI 자소서 작성</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
            <%= link_to ontology_input_cover_letters_path, class: "flex items-center justify-between p-3 bg-white bg-opacity-20 rounded-lg hover:bg-opacity-30 transition" do %>
              <span class="font-medium">온톨로지 분석</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>