<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- 페이지 헤더 -->
  <div class="bg-white rounded-lg border border-gray-100 p-8 mb-8">
    <div class="mb-6">
      <div class="flex items-center gap-3 mb-2">
        <%= link_to "마이페이지", mypage_path, class: "text-gray-500 hover:text-gray-700" %>
        <span class="text-gray-400">/</span>
        <span class="text-gray-900 font-medium">계정 설정</span>
      </div>
      <h1 class="text-3xl font-semibold text-gray-900">계정 설정</h1>
      <p class="text-gray-600 mt-2">이메일과 비밀번호를 변경할 수 있습니다</p>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- 이메일 설정 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">이메일 설정</h2>
      
      <div class="space-y-4">
        <div>
          <%= f.label :email, "이메일 주소", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
            <p class="text-sm text-yellow-800">
              인증 대기 중: <%= resource.unconfirmed_email %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 비밀번호 변경 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">비밀번호 변경</h2>
      <p class="text-sm text-gray-600 mb-4">비밀번호를 변경하지 않으려면 비워두세요</p>
      
      <div class="space-y-4">
        <div>
          <%= f.label :password, "새 비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">최소 <%= @minimum_password_length %>자 이상</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent" %>
        </div>
      </div>
    </div>

    <!-- 현재 비밀번호 확인 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">보안 확인</h2>
      <p class="text-sm text-gray-600 mb-4">변경사항을 저장하려면 현재 비밀번호를 입력하세요</p>
      
      <div>
        <%= f.label :current_password, "현재 비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password",
            class: "w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent" %>
      </div>
    </div>

    <!-- 저장 버튼 -->
    <div class="flex justify-between items-center">
      <%= link_to "취소", mypage_path, 
          class: "px-6 py-2 text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" %>
      <%= f.submit "변경사항 저장", 
          class: "px-6 py-2 bg-emerald-500 text-white rounded-lg hover:bg-emerald-600 transition-colors cursor-pointer" %>
    </div>
  <% end %>

  <!-- 계정 삭제 -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6 mt-8">
    <h3 class="text-lg font-semibold text-red-900 mb-2">계정 삭제</h3>
    <p class="text-sm text-red-700 mb-4">
      계정을 삭제하면 모든 데이터가 영구적으로 삭제되며 복구할 수 없습니다.
    </p>
    <%= button_to "계정 삭제", registration_path(resource_name), 
        data: { confirm: "정말로 계정을 삭제하시겠습니까?\n이 작업은 되돌릴 수 없습니다.", turbo_confirm: "정말로 계정을 삭제하시겠습니까?\n이 작업은 되돌릴 수 없습니다." }, 
        method: :delete,
        class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors" %>
  </div>
</div>
