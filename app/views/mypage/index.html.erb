<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- 마이페이지 헤더 -->
  <div class="bg-white rounded-lg border border-gray-100 p-8 mb-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-semibold text-gray-900">마이페이지</h1>
        <p class="text-gray-600 mt-2">나의 활동 내역을 한눈에 확인하세요</p>
        <div class="mt-3 text-sm text-gray-700">
          <span class="font-medium text-gray-900">잔여 분석 건수</span>
          <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full bg-emerald-50 text-emerald-700">
            <%= @analysis_credits %> 건
          </span>
          <span class="ml-3 text-gray-500">(무료 사용 <%= @free_analyses_used %>건)</span>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <%= link_to "계정 설정", edit_user_registration_path, 
            class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" %>
        <%= link_to "로그아웃", destroy_user_session_path, 
            data: { "turbo-method": :delete, turbo_confirm: "로그아웃 하시겠습니까?" },
            class: "px-4 py-2 text-sm font-medium text-white bg-gray-800 rounded-lg hover:bg-gray-900 transition-colors" %>
      </div>
    </div>
    
    <!-- 사용자 정보 요약 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
      <div class="text-center">
        <div class="text-3xl font-bold text-emerald-600"><%= @recent_cover_letters.count %></div>
        <div class="text-sm text-gray-600 mt-1">작성한 자소서</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-emerald-600"><%= @saved_job_analyses.count %></div>
        <div class="text-sm text-gray-600 mt-1">분석한 채용공고</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-emerald-600"><%= @saved_company_analyses.count %></div>
        <div class="text-sm text-gray-600 mt-1">분석한 기업</div>
      </div>
    </div>
  </div>
  
  <!-- 추천 리워드 섹션 -->
  <div id="referral" class="bg-white rounded-lg border border-gray-100 p-6 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">친구에게 추천하고 3건 보너스</h2>
        <p class="text-sm text-gray-600 mt-1">친구가 아래 링크로 가입하면 추가 3건을 받을 수 있습니다.</p>
      </div>
      <div class="flex items-center gap-2">
        <% referral_code = current_user.referral_code.presence || 'pending' %>
        <% referral_link = referral_code == 'pending' ? '#' : referral_redirect_url(code: referral_code) %>
        <input id="refLink" class="hidden md:block w-64 px-3 py-2 text-sm border border-gray-200 rounded-lg" value="<%= referral_link %>" readonly>
        <button id="copyRef" class="px-4 py-2 text-sm font-medium text-white bg-emerald-500 rounded-lg hover:bg-emerald-600">링크 복사</button>
      </div>
    </div>
    <script>
      document.getElementById('copyRef')?.addEventListener('click', async function() {
        const code = '<%= referral_code %>';
        if (code === 'pending') { alert('추천 코드를 준비 중입니다. 잠시 후 다시 시도해주세요.'); return; }
        const url = '<%= referral_redirect_url(code: referral_code) %>';
        try {
          await navigator.clipboard.writeText(url);
          alert('추천 링크가 복사되었습니다!');
        } catch (e) {
          console.error(e);
          alert('복사에 실패했습니다.');
        }
      });
    </script>
  </div>

  <!-- 최근 활동 섹션들 -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- 최근 자소서 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">저장된 자소서</h2>
        <%= link_to "전체보기", mypage_cover_letters_path, 
            class: "text-sm text-emerald-600 hover:text-emerald-700" %>
      </div>
      
      <% if @recent_cover_letters.any? %>
        <div class="space-y-3">
          <% @recent_cover_letters.each do |letter| %>
            <div class="pb-3 border-b border-gray-100 last:border-0">
              <%= link_to letter, class: "block hover:bg-gray-50 -mx-2 px-2 py-1 rounded transition-colors" do %>
                <div class="font-medium text-gray-900 text-sm truncate">
                  <%= letter.title.presence || "제목 없음" %>
                  <% if letter.improved_letter_saved_at.present? %>
                    <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-emerald-100 text-emerald-700">
                      개선본
                    </span>
                  <% end %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= letter.created_at.strftime("%Y.%m.%d") %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">저장된 자소서가 없습니다</p>
      <% end %>
    </div>
    
    <!-- 저장된 채용공고 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">저장된 채용공고</h2>
        <%= link_to "전체보기", mypage_job_analyses_path, 
            class: "text-sm text-emerald-600 hover:text-emerald-700" %>
      </div>
      
      <% if @saved_job_analyses.any? %>
        <div class="space-y-3">
          <% @saved_job_analyses.each do |analysis| %>
            <div class="pb-3 border-b border-gray-100 last:border-0">
              <%= link_to view_job_analysis_cover_letters_path(analysis), 
                  class: "block hover:bg-gray-50 -mx-2 px-2 py-1 rounded transition-colors" do %>
                <div class="font-medium text-gray-900 text-sm truncate">
                  <%= analysis.company_name.presence || "회사명 없음" %>
                </div>
                <div class="text-xs text-gray-600 truncate">
                  <%= analysis.position.presence || "포지션 없음" %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= analysis.created_at.strftime("%Y.%m.%d") %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">저장된 채용공고가 없습니다</p>
      <% end %>
    </div>
    
    <!-- 저장된 기업분석 -->
    <div class="bg-white rounded-lg border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">저장된 기업분석</h2>
        <%= link_to "전체보기", mypage_company_analyses_path, 
            class: "text-sm text-emerald-600 hover:text-emerald-700" %>
      </div>
      
      <% if @saved_company_analyses.any? %>
        <div class="space-y-3">
          <% @saved_company_analyses.each do |analysis| %>
            <div class="pb-3 border-b border-gray-100 last:border-0">
              <%= link_to company_analysis_result_cover_letters_path(analysis), 
                  class: "block hover:bg-gray-50 -mx-2 px-2 py-1 rounded transition-colors" do %>
                <div class="font-medium text-gray-900 text-sm truncate">
                  <%= analysis.company_name.presence || "회사명 없음" %>
                </div>
                <div class="text-xs text-gray-600 truncate">
                  <%= analysis.industry.presence || "업종 없음" %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= analysis.created_at.strftime("%Y.%m.%d") %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">저장된 기업분석이 없습니다</p>
      <% end %>
    </div>
  </div>
  
  <!-- 빠른 시작 섹션 -->
  <div class="bg-white rounded-lg border border-gray-100 p-8 mt-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">빠른 시작</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <%= link_to job_posting_cover_letters_path, 
          class: "text-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <div class="text-2xl mb-2">📋</div>
        <div class="text-sm font-medium text-gray-700">채용공고 분석</div>
      <% end %>
      
      <%= link_to company_analysis_cover_letters_path, 
          class: "text-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <div class="text-2xl mb-2">🏢</div>
        <div class="text-sm font-medium text-gray-700">기업 분석</div>
      <% end %>
      
      <%= link_to interactive_cover_letters_path, 
          class: "text-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <div class="text-2xl mb-2">✍️</div>
        <div class="text-sm font-medium text-gray-700">AI 자소서 작성</div>
      <% end %>
      
      <%= link_to advanced_cover_letters_path, 
          class: "text-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <div class="text-2xl mb-2">🔍</div>
        <div class="text-sm font-medium text-gray-700">심층 분석</div>
      <% end %>
    </div>
  </div>
</div>