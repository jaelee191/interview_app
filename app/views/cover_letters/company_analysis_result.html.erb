<% 
  # 강화 분석인지 확인 (enhanced_professional 또는 job_seeker_focused)
  is_enhanced = ['enhanced_professional', 'job_seeker_focused'].include?(@company_analysis.metadata&.dig('analysis_type'))
%>

<!-- Company Analysis Result Page -->
<div class="min-h-screen bg-white">
  <!-- Header -->
  <div class="bg-gray-50 border-b border-gray-100">
    <div class="max-w-6xl mx-auto px-4 py-8">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-xs text-gray-500 mb-2">Enterprise Analysis Report</div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @company_analysis.company_name %></h1>
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <span><%= @company_analysis.analysis_date.strftime("%Y년 %m월 %d일") %></span>
            <span><%= @company_analysis.metadata&.dig('methodology') || 'McKinsey/BCG Framework' %></span>
            <% if is_enhanced %>
              <span class="px-2 py-1 bg-emerald-50 text-emerald-600 text-xs rounded">
                Professional Edition
              </span>
            <% else %>
              <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                Standard Edition  
              </span>
            <% end %>
          </div>
        </div>
        <div class="text-right">
          <% if @company_analysis.cached_until.present? %>
            <div class="text-xs text-gray-500">유효기간</div>
            <div class="text-sm font-medium text-gray-700"><%= @company_analysis.cached_until.strftime("%Y-%m-%d") %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Quick Navigation -->
    <div class="sticky top-0 z-40 bg-white border border-gray-100 rounded-lg mb-8 p-4">
      <div class="flex flex-wrap gap-2 justify-center">
        <a href="#executive-summary" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          Executive Summary
        </a>
        <a href="#company-overview" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          기업 개요
        </a>
        <a href="#industry-analysis" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          산업 분석
        </a>
        <a href="#hiring-strategy" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          채용 전략
        </a>
        <a href="#preparation" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          자소서/면접
        </a>
        <a href="#competitor" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          경쟁사 비교
        </a>
        <a href="#career-advice" class="px-3 py-1.5 bg-gray-50 text-gray-700 rounded-full hover:bg-gray-100 transition-colors text-sm">
          취업 전략
        </a>
      </div>
    </div>

    <!-- Executive Summary -->
    <% if @company_analysis.metadata&.dig('executive_summary').present? %>
      <div id="executive-summary" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
        <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
          <h2 class="text-lg font-semibold text-gray-900">
            Executive Summary
          </h2>
        </div>
        <div class="p-6 content-area max-w-none text-gray-700">
          <%= markdown_to_html(@company_analysis.metadata['executive_summary']) %>
        </div>
      </div>
    <% end %>

    <!-- Company Overview Section -->
    <div id="company-overview" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          기업 개요
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('company_overview').present? %>
          <%= markdown_to_html(@company_analysis.metadata['company_overview']) %>
        <% elsif @company_analysis.hiring_patterns.present? %>
          <% begin %>
            <%= markdown_to_html(JSON.parse(@company_analysis.hiring_patterns)) %>
          <% rescue => e %>
            <%= simple_format(@company_analysis.hiring_patterns) %>
          <% end %>
        <% else %>
          <p class="text-gray-500 italic">기업 개요 정보가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Industry Analysis Section -->
    <div id="industry-analysis" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          산업 분석
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('industry_market').present? %>
          <%= markdown_to_html(@company_analysis.metadata['industry_market']) %>
        <% elsif @company_analysis.industry_trends.present? %>
          <h3 class="font-semibold text-lg mb-3">산업 동향</h3>
          <% begin %>
            <%= markdown_to_html(JSON.parse(@company_analysis.industry_trends)) %>
          <% rescue => e %>
            <%= simple_format(@company_analysis.industry_trends) %>
          <% end %>
        <% else %>
          <p class="text-gray-500 italic">산업 분석 정보가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Hiring Strategy Section -->
    <div id="hiring-strategy" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          채용 전략
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('hiring_strategy').present? %>
          <%= markdown_to_html(@company_analysis.metadata['hiring_strategy']) %>
        <% elsif @company_analysis.hiring_patterns.present? %>
          <h3 class="font-semibold text-lg mb-3">채용 패턴 분석</h3>
          <% begin %>
            <%= markdown_to_html(JSON.parse(@company_analysis.hiring_patterns)) %>
          <% rescue => e %>
            <%= simple_format(@company_analysis.hiring_patterns) %>
          <% end %>
        <% else %>
          <p class="text-gray-500 italic">채용 전략 정보가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Preparation Section -->
    <div id="preparation" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          자소서/면접 준비
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('preparation_guide').present? %>
          <%= markdown_to_html(@company_analysis.metadata['preparation_guide']) %>
        <% elsif @company_analysis.metadata&.dig('interview_preparation').present? %>
          <%= markdown_to_html(@company_analysis.metadata['interview_preparation']) %>
        <% else %>
          <p class="text-gray-500 italic">자소서/면접 준비 정보가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Competitor Comparison Section -->
    <div id="competitor" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          경쟁사 비교
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('competitor_comparison').present? %>
          <%= markdown_to_html(@company_analysis.metadata['competitor_comparison']) %>
        <% elsif @company_analysis.competitor_info.present? %>
          <h3 class="font-semibold text-lg mb-3">경쟁사 정보</h3>
          <% begin %>
            <%= markdown_to_html(JSON.parse(@company_analysis.competitor_info)) %>
          <% rescue => e %>
            <%= simple_format(@company_analysis.competitor_info) %>
          <% end %>
        <% else %>
          <p class="text-gray-500 italic">경쟁사 비교 정보가 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Career Advice Section -->
    <div id="career-advice" class="bg-white rounded-lg border border-gray-100 mb-8 overflow-hidden scroll-mt-24">
      <div class="bg-gray-50 border-b border-gray-100 px-6 py-4">
        <h2 class="text-lg font-semibold text-gray-900">
          취업 전략 조언
        </h2>
      </div>
      <div class="p-6 content-area max-w-none text-gray-700">
        <% if @company_analysis.metadata&.dig('career_advice').present? %>
          <%= markdown_to_html(@company_analysis.metadata['career_advice']) %>
        <% elsif @company_analysis.business_context.present? %>
          <h3 class="font-semibold text-lg mb-3">비즈니스 컨텍스트 기반 조언</h3>
          <% begin %>
            <%= markdown_to_html(JSON.parse(@company_analysis.business_context)) %>
          <% rescue => e %>
            <%= simple_format(@company_analysis.business_context) %>
          <% end %>
        <% else %>
          <p class="text-gray-500 italic">취업 전략 조언이 없습니다.</p>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-white rounded-lg border border-gray-100 p-6 sticky bottom-4">
      <div class="flex flex-wrap gap-3 justify-center">
        <button onclick="window.print()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-full transition-colors text-sm">
          인쇄하기
        </button>
        
        <a href="/cover_letters/company_analysis" class="px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-full transition-colors text-sm">
          새 분석하기
        </a>
        
        <a href="/cover_letters/saved_company_analyses" class="px-4 py-2 bg-white border border-gray-200 hover:bg-gray-50 text-gray-700 font-medium rounded-full transition-colors text-sm">
          저장된 분석 목록
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .content-area {
    color: #374151 !important; /* text-gray-700 */
  }
  
  .content-area h1, .content-area h2, .content-area h3, 
  .content-area h4, .content-area h5, .content-area h6 {
    color: #111827 !important; /* text-gray-900 */
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .content-area p {
    color: #4B5563 !important; /* text-gray-600 */
    line-height: 1.7;
    margin-bottom: 1rem;
  }
  
  .content-area ul, .content-area ol {
    color: #4B5563 !important;
    margin-bottom: 1rem;
  }
  
  .content-area strong {
    color: #1F2937 !important; /* text-gray-800 */
    font-weight: 600;
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Highlight target section */
  :target {
    animation: highlight 2s ease;
  }
  
  @keyframes highlight {
    0% { background-color: rgba(16, 185, 129, 0.1); }
    100% { background-color: transparent; }
  }
  
  /* Print styles */
  @media print {
    .sticky {
      position: relative !important;
    }
    
    button, a {
      display: none !important;
    }
    
    .content-area {
      page-break-inside: avoid;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add active state to navigation links
  const navLinks = document.querySelectorAll('a[href^="#"]');
  
  navLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      navLinks.forEach(l => l.classList.remove('bg-emerald-100', 'text-emerald-700'));
      this.classList.remove('bg-gray-50', 'text-gray-700');
      this.classList.add('bg-emerald-100', 'text-emerald-700');
    });
  });
});
</script>