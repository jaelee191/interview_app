<!-- Saved Company Analyses Page -->
<div class="min-h-screen bg-white">
  <!-- Header Section -->
  <div class="bg-gray-50 border-b border-gray-100 py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          내 기업 분석 목록
        </h1>
        <p class="text-lg text-gray-600">
          분석한 기업 리포트를 관리하고 다시 확인할 수 있습니다
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Action Bar -->
    <div class="flex justify-between items-center mb-8">
      <a href="<%= company_analysis_cover_letters_path %>" 
         class="px-4 py-2 bg-white border border-gray-200 text-gray-700 rounded-full hover:bg-gray-50 transition-colors font-medium text-sm">
        새 분석 시작
      </a>
      
      <div class="text-sm text-gray-600">
        총 <span class="font-semibold text-gray-900"><%= @company_analyses.total_count %></span>개의 분석 저장됨
      </div>
    </div>

    <!-- Analyses List -->
    <% if @company_analyses.any? %>
      <div class="space-y-4">
        <% @company_analyses.each do |analysis| %>
          <div class="bg-white rounded-lg border border-gray-100 p-6 hover:border-gray-200 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <!-- Company Name and Tags -->
                <div class="flex items-center gap-3 mb-3">
                  <h2 class="text-xl font-semibold text-gray-900">
                    <%= analysis.company_name %>
                  </h2>
                  <% if analysis.metadata&.dig('analysis_type') == 'enhanced_professional' %>
                    <span class="px-2 py-1 bg-emerald-50 text-emerald-600 text-xs font-medium rounded">
                      Professional
                    </span>
                  <% elsif analysis.metadata&.dig('analysis_type') == 'job_seeker_focused' %>
                    <span class="px-2 py-1 bg-emerald-50 text-emerald-600 text-xs font-medium rounded">
                      구직자 맞춤
                    </span>
                  <% else %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded">
                      Standard
                    </span>
                  <% end %>
                  <% if analysis.saved %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded">
                      저장됨
                    </span>
                  <% end %>
                </div>
                
                <!-- Company Info -->
                <div class="grid grid-cols-3 gap-4 mb-4">
                  <div>
                    <span class="text-xs text-gray-500">산업</span>
                    <p class="text-sm font-medium text-gray-900"><%= analysis.industry || '미분류' %></p>
                  </div>
                  <div>
                    <span class="text-xs text-gray-500">기업 규모</span>
                    <p class="text-sm font-medium text-gray-900"><%= analysis.company_size || '미상' %></p>
                  </div>
                  <div>
                    <span class="text-xs text-gray-500">분석일</span>
                    <p class="text-sm font-medium text-gray-900"><%= analysis.analysis_date.strftime("%Y년 %m월 %d일") %></p>
                  </div>
                </div>
                
                <!-- Summary -->
                <% if analysis.metadata&.dig('executive_summary').present? %>
                  <div class="bg-gray-50 rounded-lg p-3 mb-3">
                    <p class="text-sm text-gray-600 line-clamp-2">
                      <%= strip_tags(analysis.metadata['executive_summary']).truncate(150) %>
                    </p>
                  </div>
                <% end %>
                
                <!-- Cache Status -->
                <div class="text-xs text-gray-500">
                  <% if analysis.cached_until.present? && analysis.cached_until > Time.current %>
                    <span class="text-emerald-600">
                      캐시 유효 (<%= analysis.cached_until.strftime("%m/%d까지") %>)
                    </span>
                  <% else %>
                    <span>캐시 만료</span>
                  <% end %>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex gap-2 ml-4">
                <a href="<%= company_analysis_result_cover_letters_path(analysis) %>" 
                   class="px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white text-sm font-medium rounded-full transition-colors">
                  결과 보기
                </a>
                <button onclick="deleteAnalysis(<%= analysis.id %>, '<%= analysis.company_name %>')" 
                        class="px-4 py-2 bg-white border border-gray-200 text-gray-700 hover:bg-gray-50 text-sm font-medium rounded-full transition-colors">
                  삭제
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <div class="mt-8 flex justify-center">
        <%= paginate @company_analyses %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg border border-gray-100 p-12">
        <div class="text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-2">저장된 분석이 없습니다</h3>
          <p class="text-gray-500 mb-6">새로운 기업 분석을 시작하고 저장해보세요</p>
          <a href="<%= company_analysis_cover_letters_path %>" 
             class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-full transition-colors inline-block">
            첫 분석 시작하기
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<script>
function deleteAnalysis(id, companyName) {
  if (confirm(`정말로 "${companyName}" 기업 분석을 삭제하시겠습니까?\n\n이 작업은 되돌릴 수 없습니다.`)) {
    fetch(`/cover_letters/delete_company_analysis/${id}`, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert('분석이 성공적으로 삭제되었습니다.');
        window.location.reload();
      } else {
        alert('삭제 실패: ' + (data.error || '알 수 없는 오류'));
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('삭제 중 오류가 발생했습니다.');
    });
  }
}
</script>