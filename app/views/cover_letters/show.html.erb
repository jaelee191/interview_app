<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Page Header -->
  <div class="border-b border-gray-100 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">분석 결과</h1>
          <p class="text-gray-600 mt-2"><%= @cover_letter.title %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to new_cover_letter_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all font-medium" do %>
            새 분석
          <% end %>
          <%= link_to cover_letters_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-black transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
            </svg>
            목록
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 왼쪽: 기본 정보 및 원본 -->
      <div class="lg:col-span-1 space-y-6">
        <!-- 기본 정보 -->
        <div class="bg-white rounded-xl border border-gray-100 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">기본 정보</h2>
          <div class="space-y-3">
            <% if @cover_letter.user_name.present? %>
              <div>
                <p class="text-sm text-gray-500">이름</p>
                <p class="font-medium text-gray-900"><%= @cover_letter.user_name %></p>
              </div>
            <% end %>
            <% if @cover_letter.company_name.present? %>
              <div>
                <p class="text-sm text-gray-500">지원 기업</p>
                <p class="font-medium text-gray-900"><%= @cover_letter.company_name %></p>
              </div>
            <% end %>
            <% if @cover_letter.position.present? %>
              <div>
                <p class="text-sm text-gray-500">지원 직무</p>
                <p class="font-medium text-gray-900"><%= @cover_letter.position %></p>
              </div>
            <% end %>
            <div>
              <p class="text-sm text-gray-500">분석 일시</p>
              <p class="font-medium text-gray-900"><%= @cover_letter.created_at.strftime("%Y년 %m월 %d일 %H:%M") %></p>
            </div>
          </div>
        </div>
        
        <!-- 원본 자기소개서 -->
        <div class="bg-white rounded-xl border border-gray-100 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">원본 자기소개서</h2>
          <div class="prose prose-sm max-w-none">
            <p class="text-gray-700 whitespace-pre-wrap text-sm leading-relaxed"><%= @cover_letter.content %></p>
          </div>
        </div>
      </div>
      
      <!-- 오른쪽: AI 분석 결과 -->
      <div class="lg:col-span-2">
        <% if @cover_letter.analysis_result.present? %>
          <div class="bg-white rounded-xl border border-gray-100 p-8">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-gray-900">AI 분석 결과</h2>
              <% if @analysis_sections && @analysis_sections[:overall_score] %>
                <div class="flex items-center">
                  <span class="text-3xl font-bold <%= score_color(@analysis_sections[:overall_score]) %>">
                    <%= @analysis_sections[:overall_score] %>
                  </span>
                  <span class="text-lg text-gray-500 ml-1">/100</span>
                </div>
              <% end %>
            </div>
            
            <!-- 분석 내용 -->
            <div class="prose prose-lg max-w-none">
              <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <pre class="whitespace-pre-wrap text-gray-800 text-sm leading-relaxed font-sans"><%= @cover_letter.analysis_result %></pre>
              </div>
            </div>
            
            <!-- 액션 버튼 -->
            <div class="mt-8 pt-6 border-t border-gray-200">
              <div class="flex justify-between items-center">
                <p class="text-sm text-gray-500">
                  이 분석 결과가 도움이 되셨나요?
                </p>
                <div class="flex space-x-3">
                  <button class="px-4 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-all text-sm font-medium">
                    도움됨
                  </button>
                  <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all text-sm font-medium">
                    보통
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <!-- 분석 중 또는 실패 -->
          <div class="bg-white rounded-xl border border-gray-100 p-16 text-center">
            <div class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-yellow-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">분석 중입니다</h3>
            <p class="text-gray-600">AI가 자기소개서를 분석하고 있습니다. 잠시만 기다려주세요...</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% def score_color(score) %>
  <% if score >= 80 %>
    <% "text-green-600" %>
  <% elsif score >= 60 %>
    <% "text-blue-600" %>
  <% elsif score >= 40 %>
    <% "text-yellow-600" %>
  <% else %>
    <% "text-red-600" %>
  <% end %>
<% end %>