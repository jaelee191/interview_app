<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/cover_letters/saved_job_analyses" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        목록으로 돌아가기
      </a>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-xl shadow-lg p-8">
      <!-- Header -->
      <div class="border-b pb-6 mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          <%= @job_analysis.company_name || "회사명 미상" %>
        </h1>
        <p class="text-xl text-gray-700">
          <%= @job_analysis.position || "포지션 미상" %>
        </p>
        <div class="mt-4 flex items-center gap-4 text-sm text-gray-500">
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            분석일: <%= @job_analysis.created_at.strftime("%Y년 %m월 %d일 %H:%M") %>
          </span>
          <% if @job_analysis.url && @job_analysis.url != "text_input" %>
            <a href="<%= @job_analysis.url %>" target="_blank" class="flex items-center gap-1 text-blue-600 hover:text-blue-700">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              원본 채용공고
            </a>
          <% end %>
        </div>
      </div>

      <!-- Keywords and Skills -->
      <% if @job_analysis.keywords.present? || @job_analysis.required_skills.present? %>
        <div class="mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">핵심 키워드 및 필수 역량</h2>
          <div class="flex flex-wrap gap-2">
            <% if @job_analysis.keywords.present? %>
              <% keywords_array = @job_analysis.keywords.is_a?(String) ? JSON.parse(@job_analysis.keywords) : @job_analysis.keywords %>
              <% keywords_array.each do |keyword| %>
                <span class="inline-block bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
                  <%= keyword %>
                </span>
              <% end %>
            <% end %>
            <% if @job_analysis.required_skills.present? %>
              <% skills_array = @job_analysis.required_skills.is_a?(String) ? JSON.parse(@job_analysis.required_skills) : @job_analysis.required_skills %>
              <% skills_array.each do |skill| %>
                <span class="inline-block bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">
                  <%= skill %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Summary -->
      <% if @job_analysis.summary.present? %>
        <div class="mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">요약</h2>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-gray-700 whitespace-pre-wrap">
              <%= @job_analysis.summary %>
            </p>
          </div>
        </div>
      <% end %>

      <!-- Full Analysis Result -->
      <% if @job_analysis.analysis_result.present? %>
        <div class="mb-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-3">전체 분석 결과</h2>
          <div class="bg-gray-50 rounded-lg p-6 max-h-[600px] overflow-y-auto">
            <% begin %>
              <% analysis_data = JSON.parse(@job_analysis.analysis_result) %>
              
              <% if analysis_data.is_a?(Hash) %>
                <% analysis_data.each do |key, value| %>
                  <div class="mb-6 bg-white rounded-lg p-4 border border-gray-200">
                    <h3 class="font-semibold text-gray-900 mb-3">
                      <%= key.humanize.titleize %>
                    </h3>
                    <div class="text-gray-700">
                      <% if value.is_a?(String) %>
                        <div class="prose prose-sm max-w-none">
                          <%= simple_format(value.gsub(/\*\*(.*?)\*\*/, '<strong>\1</strong>').html_safe) %>
                        </div>
                      <% elsif value.is_a?(Array) %>
                        <ul class="list-disc pl-5 space-y-1">
                          <% value.each do |item| %>
                            <li><%= item %></li>
                          <% end %>
                        </ul>
                      <% elsif value.is_a?(Hash) %>
                        <dl class="space-y-2">
                          <% value.each do |k, v| %>
                            <div class="pl-4 border-l-2 border-gray-200">
                              <dt class="font-medium text-gray-700"><%= k %>:</dt>
                              <dd class="text-gray-600 ml-4">
                                <% if v.is_a?(Array) %>
                                  <%= v.join(", ") %>
                                <% else %>
                                  <%= v %>
                                <% end %>
                              </dd>
                            </div>
                          <% end %>
                        </dl>
                      <% else %>
                        <%= value %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <!-- If it's not a hash, display as markdown text -->
                <div class="prose prose-sm max-w-none">
                  <%= simple_format(@job_analysis.analysis_result.gsub(/##\s*(.*?)$/m, '<h3 class="text-lg font-bold mt-4 mb-2">\1</h3>').gsub(/\*\*(.*?)\*\*/, '<strong>\1</strong>').html_safe) %>
                </div>
              <% end %>
            <% rescue JSON::ParserError %>
              <!-- If JSON parsing fails, display as plain text -->
              <div class="prose prose-sm max-w-none">
                <%= simple_format(@job_analysis.analysis_result.gsub(/##\s*(.*?)$/m, '<h3 class="text-lg font-bold mt-4 mb-2">\1</h3>').gsub(/\*\*(.*?)\*\*/, '<strong>\1</strong>').html_safe) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="mt-8 pt-6 border-t flex gap-4">
        <a href="/cover_letters/ontology_input?job_analysis_id=<%= @job_analysis.id %>" 
           class="bg-green-600 hover:bg-green-700 text-white font-medium px-6 py-3 rounded-lg transition-colors flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          이 분석으로 자소서 작성
        </a>
        <a href="/cover_letters/saved_job_analyses" 
           class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium px-6 py-3 rounded-lg transition-colors">
          목록으로
        </a>
      </div>
    </div>
  </div>
</div>