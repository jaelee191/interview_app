<!-- Company Analysis Page -->
<div class="min-h-screen bg-white">
  <!-- Hero Section -->
  <div class="bg-gray-50 border-b border-gray-100 py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          구직자 맞춤 <span class="text-emerald-500">기업분석</span>
        </h1>
        <p class="text-lg text-gray-600">
          실제 채용공고, 최신 뉴스, 기업 문화를 분석해<br>
          구직자에게 정말 필요한 인사이트를 제공합니다
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Feature Tags -->
    <div class="flex justify-center gap-3 mb-12 flex-wrap">
      <span class="px-4 py-2 bg-white border border-gray-100 rounded-full text-sm text-gray-600">
        면접 예상 질문
      </span>
      <span class="px-4 py-2 bg-white border border-gray-100 rounded-full text-sm text-gray-600">
        연봉 & 복리후생
      </span>
      <span class="px-4 py-2 bg-white border border-gray-100 rounded-full text-sm text-gray-600">
        기업 문화 평가
      </span>
    </div>

    <!-- Analysis Form -->
    <div class="bg-white rounded-lg border border-gray-100 p-8">
      <form action="/cover_letters/analyze_company" method="post" id="company-analysis-form">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">기업명 입력</label>
          <input 
            type="text" 
            name="company_name" 
            id="company_name"
            placeholder="예: 삼성전자, 카카오, 네이버" 
            class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            required
          />
          <p class="mt-2 text-sm text-gray-500">
            정확한 기업명을 입력하면 더 정밀한 분석이 가능합니다
          </p>
        </div>

        <!-- Analysis Type Selection -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-3">분석 유형 선택</label>
          <div class="grid md:grid-cols-2 gap-4">
            <label class="cursor-pointer">
              <input type="radio" name="analysis_type" value="enhanced" checked class="sr-only peer">
              <div class="p-5 border border-gray-200 rounded-lg peer-checked:border-emerald-500 peer-checked:bg-emerald-50 hover:bg-gray-50 transition-all">
                <div class="font-medium text-gray-900 mb-2">실시간 웹 분석</div>
                <div class="text-sm text-gray-600 mb-3 space-y-1">
                  <div>• 실제 채용공고 & 최신 뉴스 분석</div>
                  <div>• 면접 예상 질문 & 답변 가이드</div>
                  <div>• 연봉 정보 & 복리후생 분석</div>
                  <div>• 기업 문화 & 워라밸 평가</div>
                </div>
                <div class="text-xs text-emerald-600">
                  구직 전략 수립 (30-60초)
                </div>
              </div>
            </label>
            
            <label class="cursor-pointer">
              <input type="radio" name="analysis_type" value="python_ai" class="sr-only peer">
              <div class="p-5 border border-gray-200 rounded-lg peer-checked:border-emerald-500 peer-checked:bg-emerald-50 hover:bg-gray-50 transition-all">
                <div class="font-medium text-gray-900 mb-2">
                  AI 정량 분석 
                  <span class="text-xs bg-emerald-100 text-emerald-600 px-2 py-0.5 rounded ml-1">NEW</span>
                </div>
                <div class="text-sm text-gray-600 mb-3 space-y-1">
                  <div>• 기업 종합 점수 (A~D 등급)</div>
                  <div>• 뉴스 감정 분석 & 트렌드</div>
                  <div>• 채용 활성도 & 요구 스킬</div>
                  <div>• 맞춤형 지원 전략 추천</div>
                </div>
                <div class="text-xs text-emerald-600">
                  데이터 기반 의사결정 (15-30초)
                </div>
              </div>
            </label>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <input type="checkbox" name="force_refresh" value="true" id="force_refresh" class="rounded">
            <label for="force_refresh">캐시된 데이터 무시하고 새로 분석</label>
          </div>
          
          <button 
            type="submit" 
            class="px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-full transition-colors">
            기업 분석 시작
          </button>
        </div>
      </form>
    </div>

    <!-- Loading State -->
    <div id="loading-analysis" class="hidden mt-8">
      <div class="bg-white rounded-lg border border-gray-100 p-8">
        <div class="text-center">
          <div class="w-12 h-12 border-4 border-gray-200 border-t-emerald-500 rounded-full animate-spin mx-auto mb-4"></div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">분석 중입니다</h3>
          <p class="text-gray-600">기업 정보를 수집하고 분석하고 있습니다...</p>
        </div>
      </div>
    </div>

    <!-- Results Container -->
    <div id="analysis-results" class="hidden mt-8"></div>

    <!-- Saved Analyses Link -->
    <div class="mt-12 text-center">
      <a href="/cover_letters/saved_company_analyses" 
         class="text-emerald-600 hover:text-emerald-700 font-medium text-sm">
        저장된 분석 결과 보기 →
      </a>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('company-analysis-form');
  const loadingDiv = document.getElementById('loading-analysis');
  const resultsDiv = document.getElementById('analysis-results');
  
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      company_name: formData.get('company_name'),
      analysis_type: formData.get('analysis_type'),
      force_refresh: formData.get('force_refresh') === 'true'
    };
    
    // Show loading
    loadingDiv.classList.remove('hidden');
    resultsDiv.classList.add('hidden');
    resultsDiv.innerHTML = '';
    
    fetch('/cover_letters/analyze_company', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
      loadingDiv.classList.add('hidden');
      
      if (data.success) {
        resultsDiv.innerHTML = `
          <div class="bg-white rounded-lg border border-gray-100 p-8">
            <div class="mb-6">
              <h2 class="text-2xl font-semibold text-gray-900 mb-2">${data.company_name || '기업'} 분석 결과</h2>
              <p class="text-gray-600">분석 완료 시간: ${new Date().toLocaleString()}</p>
            </div>
            <div class="prose prose-gray max-w-none">
              ${data.analysis || data.content || '분석 결과가 없습니다.'}
            </div>
            ${data.analysis_id ? `
              <div class="mt-6 pt-6 border-t border-gray-100">
                <a href="/cover_letters/company_analysis_result/${data.analysis_id}" 
                   class="text-emerald-600 hover:text-emerald-700 font-medium">
                  전체 결과 보기 →
                </a>
              </div>
            ` : ''}
          </div>
        `;
        resultsDiv.classList.remove('hidden');
      } else {
        resultsDiv.innerHTML = `
          <div class="bg-white border border-red-100 rounded-lg p-6">
            <h3 class="text-red-900 font-medium mb-2">분석 실패</h3>
            <p class="text-red-700">${data.error || '알 수 없는 오류가 발생했습니다.'}</p>
          </div>
        `;
        resultsDiv.classList.remove('hidden');
      }
    })
    .catch(error => {
      loadingDiv.classList.add('hidden');
      resultsDiv.innerHTML = `
        <div class="bg-white border border-red-100 rounded-lg p-6">
          <h3 class="text-red-900 font-medium mb-2">네트워크 오류</h3>
          <p class="text-red-700">서버와 연결할 수 없습니다: ${error.message}</p>
        </div>
      `;
      resultsDiv.classList.remove('hidden');
    });
  });
});
</script>