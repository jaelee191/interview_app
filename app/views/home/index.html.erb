  }
  
  @keyframes progressGrow {
    0% { width: 45%; }
    50% { width: 75%; }
    100% { width: 45%; }
  }
</style>

<script>
  // AI Writing Animation
  (function() {
    const textSamples = [
      "저는 컴퓨터공학을 전공하며 <span class='inline-block bg-blue-100 text-blue-700 px-1 rounded'>알고리즘 문제해결</span>에 깊은 관심을 가지고 꾸준히 역량을 키워왔습니다.",
      "대학 시절 <span class='inline-block bg-green-100 text-green-700 px-1 rounded'>오픈소스 프로젝트</span> 참여를 통해 실무 개발 프로세스를 경험했습니다.",
      "특히 <span class='inline-block bg-purple-100 text-purple-700 px-1 rounded'>React Native</span>를 활용한 모바일 앱 개발 프로젝트에서 팀 리더로 활동하며...",
      "<span class='inline-block bg-yellow-100 text-yellow-700 px-1 rounded'>사용자 중심 설계</span>를 바탕으로 UI/UX를 개선하여 사용성을 30% 향상시켰습니다.",
      "삼성전자의 <span class='inline-block bg-red-100 text-red-700 px-1 rounded'>혁신적인 기술력</span>과 함께 성장하고 싶습니다."
    ];
    
    let currentIndex = 0;
    let currentText = "";
    let charIndex = 0;
    let isDeleting = false;
    let progressValue = 45;
    let timeValue = 120; // seconds
    
    function typeWriter() {
      const element = document.getElementById('aiWritingText');
      if (!element) return;
      
      const p2 = element.querySelector('.typing-animation');
      if (!p2) return;
      
      const fullText = textSamples[currentIndex];
      const textWithoutTags = fullText.replace(/<[^>]*>/g, '');
      
      if (!isDeleting) {
        if (charIndex < textWithoutTags.length) {
          // Typing
          currentText = textWithoutTags.substring(0, charIndex + 1);
          let displayText = currentText;
          
          // Add highlight tags if present in original
          if (fullText.includes('<span')) {
            const matches = fullText.match(/<span[^>]*>([^<]*)<\/span>/g);
            if (matches) {
              matches.forEach(match => {
                const innerText = match.replace(/<[^>]*>/g, '');
                if (currentText.includes(innerText)) {
                  displayText = displayText.replace(innerText, match);
                }
              });
            }
          }
          
          p2.innerHTML = displayText + '<span class="typing-cursor">|</span>';
          charIndex++;
          setTimeout(typeWriter, 50);
        } else {
          // Pause before deleting
          setTimeout(() => {
            isDeleting = true;
            typeWriter();
          }, 2000);
        }
      } else {
        if (charIndex > 0) {
          // Deleting
          currentText = textWithoutTags.substring(0, charIndex - 1);
          p2.innerHTML = currentText + '<span class="typing-cursor">|</span>';
          charIndex--;
          setTimeout(typeWriter, 30);
        } else {
          // Move to next text
          isDeleting = false;
          currentIndex = (currentIndex + 1) % textSamples.length;
          setTimeout(typeWriter, 500);
        }
      }
    }
    
    // Progress animation
    function animateProgress() {
      const progressBar = document.getElementById('progressBar');
      const progressPercent = document.getElementById('progressPercent');
      const timeRemaining = document.getElementById('timeRemaining');
      
      if (!progressBar || !progressPercent || !timeRemaining) return;
      
      setInterval(() => {
        progressValue = progressValue + (Math.random() * 3 - 1);
        progressValue = Math.max(45, Math.min(85, progressValue));
        
        progressBar.style.width = progressValue + '%';
        progressPercent.textContent = Math.round(progressValue) + '%';
        
        // Update time
        timeValue = Math.max(0, timeValue - 1);
        const minutes = Math.floor(timeValue / 60);
        const seconds = timeValue % 60;
        timeRemaining.textContent = minutes + '분 ' + seconds + '초';
        
        if (timeValue === 0) {
          timeValue = 120; // Reset
        }
      }, 1000);
    }
    
    // Start animations when page loads
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(typeWriter, 1000);
      animateProgress();
    });
  })();
</script>

